{
    "name": "xpersonas/laravel-styleguide",
    "description": "Simple styleguide for use with Laravel projects utilizing Spatie.",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "xpersonas",
            "email": "justin.neel@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Xpersonas\\Styleguide\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xpersonas\\Styleguide\\Tests\\": "tests/"
        }
    },
    "require": {
        "eloquent/composer-npm-bridge": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "orchestra/testbench": "^5.3"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xpersonas\\Styleguide\\Providers\\StyleguideServiceProvider"
            ]
        },
        "npm-bridge": {
            "timeout": 9000,
            "optional": true
        }
    }
}
